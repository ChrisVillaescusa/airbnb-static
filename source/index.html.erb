<div class="welcome text-center padded">
  <h1>Welcome to Middleman</h1>
  <p class="doc">
    <%= link_to "Read Online Documentation", "http://middlemanapp.com/" %>
  </p>
</div>






    <!-- Your banner code -->
    <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), background-image: image-url('background.jpg');">
      <div class="banner-content">
        <h1>Some Stuff</h1>
        <p>Very cool stuff, useful and smart</p>
        <a class="btn btn-primary btn-lg">GET IT</a>
      </div>
    </div>

    <!-- Your features code -->
    <div class="wrapper-grey">
       <div class="container">
              <div class="row"></div>
              <div class="col-xs-12"></div>
              <div class="col-xs-12"></div>
              <div class="col-xs-12"></div>
              <div class="col-xs-12"></div>
            </div>

            <div class="text-center padded features">
              <img src="images/globe.png" alt="">
              <h2>Discover the world</h2>
              <p>The earth is your new home.</p>

              <img src="images/dollar.png" alt="">
              <h2>Pay online</h2>
              <p>No cash issues anymore.</p>

              <img src="images/beer.png" alt="">
              <h2>Meet people</h2>
              <p>Discover new culture and lifestyle.</p>

              <img src="images/heart.png" alt="">
              <h2>Share and love</h2>
              <p>Join a community you will love.</p>
            </div>


    </div>
    <!-- Your cards code -->
    <div class="wrapper-grey padded">
      <div class="container">
        <div class="row">
          <% data.flats.each do |owner, flat| %>
            <div class="col-xs-12 col-sm-4">
              <div class="card" style="background-image: url('<%= image_path flat.picture %>');">
                <div class="card-category"><%= flat.city %></div>
                <div class="card-description">
                  <h2><%= flat.name %></h2>
                  <p><%= flat.summary %></p>
                </div>
                <%= image_tag flat.owner_picture, class:"card-user avatar avatar-large" %>
                <%= link_to "#", "flats/#{owner}.html", class: "card-link" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <!-- Your newsletter code -->
    <div class="text-center padded">
      <h2>Get news from us</h2>
      <h3>Leave us your mail and get news from us</h3>

      <form class="form-inline padded  ">
        <div class="form-group">
          <label for="exampleInputEmail2">Email</label>
          <input type="email" class="form-control" id="exampleInputEmail2" placeholder="bob@gmail.com">
        </div>
        <button type="submit" class="btn btn-primary">Send invitation</button>
      </form>
    </div>


    <!-- Your map code -->
    <div id="map" style="width: 100%; height: 700px;"></div>

    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>

    <script type="text/javascript">
    var myLatlng = new google.maps.LatLng(48.843498817144045, 2.3480574278092208);
    var myOptions = {
      zoom: 16,
      center: myLatlng,
      scrollwheel: false,
      mapTypeId: google.maps.MapTypeId.ROADMAP,
      styles: [] // TODO: replace [] by array from https://snazzymaps.com/
    };

    var map = new google.maps.Map(document.getElementById('map'), myOptions);
    var marker = new google.maps.Marker({
      position: myLatlng,
      map: map,
      title: "You are here!"
    });
    </script>


